// We define MY_LED to be the LED that we want to blink.
//
// In this tutorial, we're using the blue D7 LED (next to D7 on the Photon
// and Electron, and next to the USB connector on the Argon and Boron).
const pin_t MY_LED = D7;


SYSTEM_THREAD(ENABLED);

void setup()
{
	
	pinMode(MY_LED, OUTPUT);
}


void loop()
{
// this for R
	digitalWrite(MY_LED, HIGH);

	delay(1500);


	digitalWrite(MY_LED, LOW);

	delay(1000);


	digitalWrite(MY_LED, HIGH);

	delay(3000);

	digitalWrite(MY_LED, LOW);


	delay(1000);
	
	digitalWrite(MY_LED, HIGH);

	delay(1500);


	digitalWrite(MY_LED, LOW);

	delay(1000);
	//THIS FOR A

	digitalWrite(MY_LED, HIGH);

	delay(1500);

	digitalWrite(MY_LED, LOW);


	delay(1000);

	digitalWrite(MY_LED, HIGH);


	delay(3000);

	digitalWrite(MY_LED, LOW);

	delay(1000);
	//THIS FOR W
	
	digitalWrite(MY_LED, HIGH);

	delay(1500);

	digitalWrite(MY_LED, LOW);

	delay(1000);
	
	digitalWrite(MY_LED, HIGH);


	delay(3000);

	digitalWrite(MY_LED, LOW);

	delay(1000);
	
	digitalWrite(MY_LED, HIGH);

	delay(3000);

	digitalWrite(MY_LED, LOW);

	delay(1000);
//	THIS FOR A
	
	digitalWrite(MY_LED, HIGH);

	delay(1500);


	digitalWrite(MY_LED, LOW);


	delay(1000);
	
	digitalWrite(MY_LED, HIGH);


	delay(3000);


	digitalWrite(MY_LED, LOW);

	delay(1000);
	//THIS FOR N
	
	digitalWrite(MY_LED, HIGH);

	delay(3000);

	digitalWrite(MY_LED, LOW);

	delay(1000);
	
	digitalWrite(MY_LED, HIGH);


	delay(1500);


	digitalWrite(MY_LED, LOW);

	delay(1000);
	
}
